.container {
  padding: 70px 24rpx 24px;
}

.greeting text {
  font-size: 36rpx;
  font-weight: bold;
}

.profile-box {
  margin-top: 30rpx;
  text-align: center;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 0 auto;
}

.score-text {
  font-size: 32rpx;
  margin-top: 20rpx;
}

.score {
  display: block;
  font-size: 30rpx;
  color: #b96ca2;
}

.timestamp {
  font-size: 24rpx;
  color: gray;
  margin-top: 8rpx;
}

.tips-button {
  background: #F2E8ED;
  border-radius: 40rpx;
  padding: 22rpx;
  margin-top: 40rpx;
  font-size: 32rpx;
  color: #000;
}

.explore-title {
  width: 100%;
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 60rpx;
  margin-bottom: 24px;
  margin-left: 30px;
}

.explore-section {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-right: 50px;
  margin-left: 50px;
  gap: 50px;
}

.explore-item {
  width: 35%;
  display: flex;
  flex-direction: column;
  text-align: left;
}

.explore-img {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
}

.title {
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.desc {
  font-size: 24rpx;
  color: gray;
}